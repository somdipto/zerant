+BrowserOSExternalLoader::BrowserOSExternalLoader(Profile* profile)
+    : profile_(profile) {
+  // Default config URL - can be overridden via SetConfigUrl
+  config_url_ = GURL(kBrowserOSConfigUrl);
+  
+  // Add known BrowserOS extension IDs
